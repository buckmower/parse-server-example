<script>
	var fileInput = document.getElementById('inputProfileImage');
	var submitButton = document.getElementById('submitCustomUserPicture');
	var fileDisplayArea = document.getElementById('fileDisplayArea');
	var uploadModal = document.getElementById('addPictureModal');


	fileInput.addEventListener('change', function(e) {
		var file = fileInput.files[0];
		var imageType = /image.*/;

		if (file.type.match(imageType)) {
			var reader = new FileReader();

			reader.onload = function(e) {
				fileDisplayArea.innerHTML = "";

				var img = new Image();
				img.src = reader.result;
				img.id = img.id + "uploadedProfilePicImgOnDisplay";
				img.className = img.className + " img img-responsive";

				fileDisplayArea.appendChild(img);
			}

			reader.readAsDataURL(file);	
		} else {
			fileDisplayArea.innerHTML = "File not supported!"
		}
	});
</script>
