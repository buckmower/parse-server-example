<div class="modal fade" id="editDescriptionModal" tabindex="-1" role="dialog" aria-labelledby="editDescriptionModal" aria-hidden="true">
     <div class="modal-dialog">
       <div class="modal-content">
         <div class="modal-header">
           <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
           <h4 class="modal-title">Edit Profile Name</h4>
         </div>
         <div class="modal-body">
            <form method="POST" action="/me/editdescription">
              <fieldset>
                 <div class="form-group">
                  <label class="control-label"><%= username %></label>
                  <div class="col-xs-12">
                        <input type="text" id="newusername" name="newusername" value="<%= username %>">
                   </div>
                </div>
             </fieldset>
             <fieldset>
               <div class="input-group">
                  <input type="submit" name="submitEditDescription" class="btn btn-default" value="Submit Edit">
               </div>
             </fieldset>
           </form>
         </div>
         <div class="modal-footer">
               <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">Close</button>
         </div>
     </div><!-- /.modal-content -->
   </div><!-- /.modal-dialog -->
 </div><!-- /.modal -->