            <!-- START timeline-->
            <ul class="timeline" id="listofnotifications">
               <%
               for(var i=0; i < notifications.length; i++){
                  var notification = notifications[i];
                  if((i == 0) || ((i % 2) == 0)) {
                     var leftright = "left";
                     var inverted = "";
                  } else {
                     var leftright = "right";
                     var inverted = "timeline-inverted";
                  }
                  if(notification.notificationType == "election") {
                     var badge = "fa-flag";
                  } else if(notification.notificationType == "nomination") {
                     var badge = "fa-star";
                  }
               %>
               <li class="notificationitem <%= inverted %>">
                  <div class="timeline-badge primary">
                      <em class="fa <%= badge %>"></em>
                  </div>
                  <div class="timeline-date">
                      <time class="timeofnotification" data-unixdate="<%= notification.unixDate %>" datetime=""></time>
                  </div>
                  <div class="timeline-panel">
