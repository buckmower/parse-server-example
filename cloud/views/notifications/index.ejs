                         <div class="arrow"></div>
                         <h2 class="popover-title">
                         <% 
                         if(notification.notificationType == "election") {
                            %>
                            <a href="/sphere/<%= notification.sphereObjectID %>"><%= notification.sphereName %></a>
                           <%
                         }
                         if(notification.notificationType == "nomination") {
                            %>
                            <a href="/sphere/<%= notification.sphereObjectID %>"><%= notification.sphereName %></a>
                           <%
                         }
                         %>
                         </h2>
                         <% 
                         if(notification.notificationType == "election") {
                            %>
                         <div class="popover-content">
                              <p>The Election <h2><a href="/sphere/<%= notification.sphereObjectID %>/election/<%= notification.electionID %>"><%= notification.electionName %></a>
                              </h2>
                              was added to the sphere
                                 <a href="/sphere/<%= notification.sphereObjectID %>"><%= notification.sphereName %></a>
                              </p>
                            <p><span class="endDate" datetime="" data-enddate="<%= notification.electionEndDateUnix %>"></span></p>
                         </div>
                         <%
                         }
                         if(notification.notificationType == "nomination") {
                            %>
                            <div class="popover-content">
                            <p>The Nomination <h2><a href="/sphere/<%= notification.sphereObjectID %>/election/<%= notification.electionID %>/nomination/<%= notification.nominationObject.id %>"><%= notification.nominationObject.nominationName %></a></h2>
                            was added to the election
                           <a href="/sphere/<%= notification.sphereObjectID %>/election/<%= notification.electionID %>"><%= notification.electionName %></a>
                            </p>
                            <p><span class="endDate" datetime="" data-enddate="<%= notification.electionEndDateUnix %>"></span></p>
                            </div>
                            <%
                         }
                         %>
                     </div>
                  </div>
               </li>
               <%
